{
	"name": "standup",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"tauri:dev": "pnpm tauri dev",
		"tauri:build": "pnpm tauri build",
		"tauri:build:windows-x64": "pnpm tauri build --target x86_64-pc-windows-msvc",
		"tauri:build:windows-x86": "pnpm tauri build --target i686-pc-windows-msvc",
		"tauri:build:darwin-arm": "pnpm tauri build --target aarch64-apple-darwin",
		"tauri:build:darwin-x64": "pnpm tauri build --target x86_64-apple-darwin",
		"tauri:build:darwin-universal": "pnpm tauri build --target universal-apple-darwin",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"test:ci": "vitest run",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@iconify-json/tabler": "^1.1.120",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-static": "1.0.0-next.50",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@tauri-apps/api": "^1.6.0",
		"@tauri-apps/cli": "^1.6.0",
		"@types/eslint": "^9.6.0",
		"@types/lodash-es": "^4.17.12",
		"@unocss/extractor-svelte": "^0.62.3",
		"@unocss/preset-icons": "^0.62.3",
		"date-fns": "^3.6.0",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"immer": "^10.1.1",
		"lodash-es": "^4.17.21",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"unocss": "^0.62.2",
		"vite": "^5.0.3",
		"vitest": "^2.0.0"
	},
	"type": "module"
}
